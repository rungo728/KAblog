<div class="signup-container">
  <div class='signup-header'>
    <%= link_to root_path do %>
      <img src="<%=asset_path "login1.png" %>">
    <% end %>
  </div>
  <div class='signup-content'>
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'mail-address', class: 'input-field' %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, placeholder: 'password', class: 'input-field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :パスワードを記憶する  %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>